- Bottles of Beer -

for each (n) in (99 to 1) do
	{(n) bottles, " of beer on the wall, ", (n) bottles, " of beer."} ↲
	"Take one down, pass it around." ↲
	{((n - 1) bottles), " of beer on the wall!"} ↲
	new line

(n) bottles :
	when
		this [n = 0] do ["No more bottles"]
		this [n = 1] do ["1 bottle"]
		n ⊕ " bottles"
