- Delta -

(number) with Δ (delta) :
	create
		number : number
		delta : delta

		getter
			number

		(other) equals (me) :
			(absolute (number - other's number)) < delta

		(me) to string :
			number ⊕ " with Δ " ⊕ delta

a : 1.0 with Δ 0.5
b : 0.99 with Δ 0.01

"a: ", a ↲
"b: ", b ↲

if (b = a)
	"b is equal to a" ↲
… otherwise
	"b is not equal to a" ↲

if (a = b)
	"a is equal to b" ↲
… otherwise
	"a is not equal to b" ↲
