- DELTA -

'number' with δ 'DELTA' :
	create
		'number' : 'number'
		'DELTA' : 'DELTA'

		getter
			'number'

		'other' equals ME :
			absolute ('number' - 'other'’s 'number') < 'DELTA'

		ME to string :
			'number' ⊕ " with δ " ⊕ 'DELTA'

'a' : 1.0 with δ 0.5
'b' : 0.99 with δ 0.01

"a: ", 'a' ↲
"b: ", 'b' ↲

if ('b' = 'a')
	"b is equal to a" ↲
… otherwise
	"b is not equal to a" ↲

if ('a' = 'b')
	"a is equal to b" ↲
… otherwise
	"a is not equal to b" ↲

"Equality isn't always commutative." ↲