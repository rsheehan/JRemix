make a cloud :
	create
		'base' : random 600
		'across' : random 800

		getter
			'base'

		move ME :
			'base' : 'base' + 1

		ME to string :
			"a 'cloud' - " ⊕
			… "'base': " ⊕ 'base'
			… ⊕ " 'across': " ⊕ 'across'

'cloud' : make a cloud
"The cloud's base is ", 'cloud' base ↲
move 'cloud'
"The cloud's base is now ", 'cloud' base ↲

'another cloud' : make a cloud

'cloud' ↲
'another cloud' ↲
