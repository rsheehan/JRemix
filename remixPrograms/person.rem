person called (name) age (age) and sex (sex) :
	create
		name : name
		age : age
		sex : sex

		(my) pronoun :
			if (sex = "male")
				"he"
			… otherwise
				"she"

		(me) to string :
			name ⊕ " is " ⊕ age ⊕ " years old, " ⊕ (my) pronoun ⊕ " is " ⊕ sex ⊕ "."

