"LIBRARY" ↲
LIB : library
	a :
		"function"

	'A' : "variable"

	test {
		"function call in named library block"
			a
		… expected "function"

		"variable in named library block"
			'A'
		… expected "variable"
	}
	
↲
"USING" ↲
using LIB
	test {
		"function call in named library using block"
			a
		… expected "function"

		"variable in named library using block"
			'A' ; should not exist here
		… expected null
	}
↲
"TOP-LEVEL" \n
test {
	"function call at top-level"
		a ; does not exist
	… expected null

	"variable at top-level"
		'A'
	… expected null
}
↲
LIB2 : library
	'A' : 1

	function 'X' :
		'X' + 2
	test {
		"function inside library"
			function 4
		… expected 6
	}
↲
using LIB2
	test {
		"function inside using"
			function 3
		… expected 5
	}

